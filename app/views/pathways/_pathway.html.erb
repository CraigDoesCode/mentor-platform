<% if UserPathway.find_by(user: current_user, pathway: pathway).present? %>
  <div class="">
    <%= link_to profile_user_pathway_path( current_user.profile, UserPathway.find_by(user: current_user, pathway: pathway)), class: '' do %>
      <h2 class=''><%= pathway.title %></h2>
      <p class=''><%= pathway.details %></p>
      <h4 class=''><%= pathway.difficulty.capitalize %></h4>
      <h4 class=''>Continue Pathway!</h4>
    <% end %>
<% else %>
  <div class="">
    <%= link_to pathway_path(pathway), class: 'flex flex-col h-full' do %>
      <h2 class=''><%= pathway.title %></h2>
      <p class=''><%= pathway.details %></p>
      <h4 class=''><%= pathway.difficulty.capitalize %></h4>
    <% end %>
<% end %>
  <%= link_to "Delete", pathway_path(pathway), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } if user_signed_in? && current_user.mentor? %>
</div>
