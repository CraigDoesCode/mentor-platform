<% if UserPathway.find_by(user: current_user, pathway: pathway).present? %>
  <div class="border-2 border-blue-500 p-4">
    <%= link_to profile_user_pathway_path( current_user.profile, UserPathway.find_by(user: current_user, pathway: pathway)), class: 'flex flex-col h-full' do %>
      <h2 class='font-bold'><%= pathway.title %></h2>
      <p class='grow p-1'><%= pathway.details %></p>
      <h4 class='font-bold text-end'><%= pathway.difficulty.capitalize %></h4>
      <h4 class='font-bold text-center text-lg'>Continue Pathway!</h4>
    <% end %>
<% else %>
  <div class="border hover:border-blue-500 p-4">
    <%= link_to pathway_path(pathway), class: 'flex flex-col h-full' do %>
      <h2 class='font-bold'><%= pathway.title %></h2>
      <p class='grow p-1'><%= pathway.details %></p>
      <h4 class='font-bold text-end'><%= pathway.difficulty.capitalize %></h4>
    <% end %>
<% end %>
  <%= link_to "Delete", pathway_path(pathway), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } if user_signed_in? && current_user.mentor? %>
</div>
