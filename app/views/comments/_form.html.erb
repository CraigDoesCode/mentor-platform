<div class="mt-3">
  <%= simple_form_for [user_challenge, comment] do |f| %>
    <%= f.input :message, label: false %>
    <div>
      <%= link_to "Cancel", user_challenge_path(user_challenge), class: "border p-2" %>
      <%= f.submit comment.id.nil? ? "Create" : "Save", class: "border p-2" %>
    </div>
  <% end %>
</div>
